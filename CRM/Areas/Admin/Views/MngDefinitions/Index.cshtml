@model IEnumerable<CRM.Areas.Admin.Models.Definition>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layotAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DefTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdPage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DefTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdPage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DefID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DefID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DefID })
        </td>
    </tr>
}

</table>
